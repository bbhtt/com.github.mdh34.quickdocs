{
    "app-id": "com.github.mdh34.quickdocs",
    "base": "io.elementary.BaseApp",
    "base-version": "juno",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "com.github.mdh34.quickdocs",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name":"libdevhelp",
            "sources": [
                {
                    "type":"archive",
                    "url":"https://gitlab.gnome.org/GNOME/devhelp/-/archive/3.28.1/devhelp-3.28.1.tar.gz",
                    "sha256":"71de1f7ad5f574772fa401f7278ad878d52e374c2940fb2f2f049eb060e7fe08"
                }
            ]
        },
        {
            "name": "quickdocs",
            "buildsystem": "meson",
            "config-opts": ["--buildtype=release"],
            "sources": [
                {
                  "type": "archive",
                  "url": "https://github.com/mdh34/quickDocs/archive/2.2.0.tar.gz",
                  "sha256": "f78a3816284a089931473baa4bd237bc0cb379ac86199c62cf86fbbade1ded8e"
                }
            ]
        }
    ]
}
