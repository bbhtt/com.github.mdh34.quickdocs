{
    "app-id": "com.github.mdh34.quickdocs",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.mdh34.quickdocs",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/share/gir-1.0",
        "/lib/girepository-1.0",
        "/share/vala",
        "/share/gtk-doc"
    ],
    "modules": [
        {
            "name":"libdevhelp",
            "sources": [
                {
                    "type":"archive",
                    "url":"https://gitlab.gnome.org/GNOME/devhelp/-/archive/3.28.1/devhelp-3.28.1.tar.gz",
                    "sha256":"71de1f7ad5f574772fa401f7278ad878d52e374c2940fb2f2f049eb060e7fe08"
                }
            ]
        },

        {
            "name": "quickdocs",
            "buildsystem": "meson",
            "config-opts": ["--buildtype=release"],
            "sources": [
                {
                  "type": "archive",
                  "url": "https://github.com/mdh34/quickDocs/archive/2.1.0.tar.gz",
                  "sha256": "fe6af6fa51bd6ead5e71e3b654f8d429bdd9fb927cd1a78ea4bdc0bf459b4974"
                }
            ]
        }
    ]
}

